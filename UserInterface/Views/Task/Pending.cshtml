@model TaskViewModel
@{
    ViewBag.Title = "Pending";
    var tasks = Model.Pending.ToList();
}

<!-- pending task -->
<section class="pending_task section">
    <h3 class="section_tit">Pending Tasks</h3>
    <!-- task card & no result -->
    <div class="task_content">
        @{
            if (tasks.Count == 0)
            {
                <span class="no_task">No tasks available at this time</span>
            }
            else
            {
                <div class="task_list">
                    @foreach (var item in tasks)
                    {
                        <div class="task_card">
                            <a asp-action="task-info" asp-controller="task" asp-route-taskid="@item.TskId" class="t_header ellips"
                    role="link">@item.TskTitle</a>
                            <div>
                                <p class="t_date">Due : @item.Deadline.ToString("yyyy-MM-dd")</p>
                                <p class="t_assign">
                                               <span>Assigned to <strong>@item.FirstName</strong></span>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>
    @if (Context.User.IsInRole(Roles.lead))
    {
        <div class="new_t_link">
            <a asp-action="new-task" asp-controller="task" class="icon_button" role="link">
                <span class="material-symbols-outlined">
                    add
                </span>
                New Task
            </a>
        </div>
    }
</section>