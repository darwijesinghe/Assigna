@model ResetViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Assigna" />
    <!-- main css -->
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/css/site.css" />
    <title>Sign In - Assigna</title>
</head>

<body>
    <main>
        <!-- reset password -->
        <section class="reset_pw fr_center container">
            <div class="res_content">
                <!-- message -->
                <div id="alert-message"></div>
                <h3 class="reset_tit">Password reset</h3>
                <small class="pw_instruct">Passwords must contain at least eight characters, including
                    at least 1 letter and
                    1 number.
                </small>
                <form id="reset" class="res_form" asp-action="#?" asp-antiforgery="true">
                    <div class="input_control">
                        <input type="password" id="password" role="textbox" asp-for="Password" placeholder="Password">
                        <span class="val_msg"></span>
                    </div>
                    <div class="input_control">
                        <input type="password" id="con-pass" role="textbox" asp-for="Confirm"
                            placeholder="Confirm Password">
                        <span class="val_msg"></span>
                    </div>
                    <input type="hidden" id="token" asp-for="Token">
                    <input type="hidden" id="email" asp-for="Mail">
                    <button type="submit" class="button">Reset Now</button>
                </form>
                <div class="help">
                    <span>Go back to <a asp-controller="account" asp-action="signin" role="link">Sign In</a></span>
                </div>
            </div>
        </section>
    </main>
    <!-- scripts -->
    <script type="module" src="~/js/reset-pw.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>